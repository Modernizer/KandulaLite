@{
    Layout = null;
}
@if (User.IsInRole("PurchasingManager"))
{
    <div id="model-pr-status" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    Update PR status
                </div>
                <!-- dialog body -->
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right">PR Item(s) </label>
                            <!--pr id list will be dynamically added here-->
                            <div id="div-pr-id-list" class="col-sm-9">
                            </div>
                        </div>
                        <div class="space-4"></div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right">Status</label>
                            <div class="col-sm-9">
                                <select id="select-status" class="col-sm-6">
                                    <option value="P">Pending</option>
                                    <option value="O">Ordered</option>
                                    <option value="R">Received</option>
                                </select>
                            </div>
                        </div>
                        <div class="space-4"></div>

                    </div>
                    <!-- dialog buttons -->
                    <div class="modal-footer">
                        <button id="btn-update-status" type="button" class="btn btn-primary">Update Status</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <!--PR detail table-->
    <div class="col-xs-12 col-sm-12 widget-container-span ui-sortable">
        <div class="widget-box">
            <div class="widget-header header-color-blue">
                <h5 class="bigger lighter">
                    <i class="icon-list"></i>
                    PR List
                </h5>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    @if (User.IsInRole("PurchasingManager"))
                    {
                        <button id="btn-status-model-open" class="btn btn-warning btn-block">
                            <i class="icon-share bigger-130"></i>&nbsp;Update Status
                        </button>
                    }
                    @if (User.IsInRole("StoreManager"))
                    {
                        <button id="btn-addto-inventory" class="btn btn-warning btn-block">
                            <i class="icon-plus-sign bigger-130"></i>&nbsp;Add to inventory
                        </button>
                    }
                    <!--PR list data table-->
                    <table id="PR-list" class="table table-striped table-bordered table-hover">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!--common scripts-->
<script src="~/Content/application/js/jquery.dataTables.min.js"></script>
<script src="~/Content/application/js/jquery.dataTables.bootstrap.js"></script>
<!--page related script-->
@if (User.IsInRole("PurchasingManager"))
{
    <script src="~/Scripts/erp/total_pr_list_purchasing_mgr.js"></script>
}
@if (User.IsInRole("StoreManager"))
{
    <script src="~/Scripts/erp/total_pr_list_store_mgr.js"></script>
}
