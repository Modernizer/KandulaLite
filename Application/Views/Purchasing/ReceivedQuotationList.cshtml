@{
    Layout = null;
}

<style type="text/css">
    .hover
    {
        background-color: #eee;
    }

    .tab-content
    {
        min-height: 150px;
    }

    #div-quotation-details
    {
        min-height: 500px;
    }
</style>

<div class="row">
    <table id="quotation-list" class="table table-striped table-bordered table-hover">
    </table>
</div>
<div class="hr hr-18 dotted hr-double"></div>
<div class="row">
    <div class="col-xs-12">
        <h3 id="header-quotation" class="header smaller lighter blue"></h3>
        <div id="div-detail-area" class="tabbable" style="display: none;">
            <ul id="inbox-tabs" class="inbox-tabs nav nav-tabs padding-16 tab-size-bigger tab-space-1">
                <li id="li-table" class="active li-quotation-det">
                    <a data-target="inbox" href="#inbox" data-toggle="tab">
                        <i class="blue icon-copy bigger-130"></i>
                        <span class="bigger-110">quotation list</span>
                    </a>
                </li>
                <li id="li-charts" class="li-quotation-det">
                    <a data-target="sent" href="#sent" data-toggle="tab">
                        <i class="orange icon-bar-chart bigger-130 "></i>
                        <span class="bigger-110">charts</span>
                    </a>
                </li>
            </ul>
            <div id="div-chart-type" style="width: 100%; margin: 10px 0;display:none;">
                <select id="select-chart-type" style="min-width: 150px;">
                    <option value="line">line</option>
                    <option value="column">column</option>
                </select>
            </div>
            <div id="div-quotation-details" class="tab-content no-border no-padding">
            </div>
        </div>
    </div>
</div>


<script src="~/Content/application/js/jquery.dataTables.min.js"></script>
<script src="~/Content/application/js/jquery.dataTables.bootstrap.js"></script>
<script src="~/Scripts/erp/quotation_list.js"></script>
