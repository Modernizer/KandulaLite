@{
    Layout = null;
}

<div class="row">
    <!--PR detail table-->
    <div class="col-xs-12 col-sm-6 widget-container-span ui-sortable">
        <div class="widget-box">
            <div class="widget-header header-color-blue">
                <h5 class="bigger lighter">
                    <i class="icon-list"></i>
                    PR List
                </h5>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <!--PR list data table-->
                    <table id="PR-list" class="table table-striped table-bordered table-hover">
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!--summary table-->
    <div class="col-xs-12 col-sm-6 widget-container-span ui-sortable">
        <div class="widget-box">
            <div class="widget-header header-color-blue">
                <h5 class="bigger lighter">
                    <i class="icon-table"></i>
                    PR Summary
                </h5>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <button id="btn-update-summary" class="btn btn-warning btn-block">
                        <i class="icon-refresh bigger-130"></i>&nbsp;Refresh summary table
                    </button>
                    <!--PR summary data table-->
                    <table id="PR-summary" class="table table-striped table-bordered table-hover">
                    </table>
                    <button id="btn-call-quotations" class="btn btn-success btn-block">
                        <i class="icon-ok bigger-130"></i>&nbsp;Call quotations
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="row" style="margin-top: 5px; border-top: 1px solid #e9e9e9;">

    <div class="form-inline" style="margin-top: 5px;">
        <input id="txt-range-start" class="input-small" type="text" placeholder="from" onkeypress="return IsNumberKey(event);">
        <b>-</b>
        <input id="txt-range-end" class="input-small" type="text" placeholder="to" onkeypress="return IsNumberKey(event);">

        <button id="btn-redraw-chart" class="btn btn-info btn-sm" type="button">
            <i class="icon-search icon-on-right bigger-110"></i>
            Search
        </button>
    </div>

    <!--chart-->
    <div id="div-PR-chart" class="col-xs-12 col-sm-12 widget-container-span ui-sortable">
    </div>
</div>
<!--quotation model-->
<div id="model-quotation" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                Call quotations
            </div>
            <!-- dialog body -->
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Title </label>
                        <div class="col-sm-9">
                            <input id="txt-title" class="col-xs-10 col-sm-5" type="text" placeholder="title">
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Due date </label>
                        <div class="col-sm-9">
                            <input type="text" id="datepicker-duedate" />
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Items</label>
                        <div class="col-sm-9">
                            <select id="select-items" multiple>
                                <option></option>
                                <option uom="g" value="1">Dolomite</option>
                                <option uom="g" value="2">Silica</option>
                                <option uom="g" value="3">Soda ash</option>
                                <option uom="g" value="4">Felspar</option>
                                <option uom="g" value="5">Cullets</option>
                            </select>


                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">&nbsp;</label>
                        <div class="col-sm-9">
                            <button id="btn-add-items" class="btn btn-info btn-xs">
                                <i class="icon-check bigger-110"></i>add selected items
                            </button>
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Quotation Item(s)</label>
                        <!--initially set a message-->
                        <div id="div-qutation-selected-item-list" class="col-sm-9">
                            <span class="label label-warning arrowed-in-right arrowed">select items for quotation</span>
                        </div>

                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Suppliers </label>
                        <div class="col-sm-9">
                            <select id="select-suppliers" multiple>
                                <option></option>
                                <option value="1">Sunil Traders</option>
                                <option value="2">ABS (pvt) Ltd</option>
                                <option value="3">Amanda Services</option>
                                <option value="4">Hokandara Hardwares</option>
                                <option value="5">MAGA</option>
                                <option value="6">Sunimal Enterprises</option>
                                <option value="7">CB (pvt) Ltd</option>
                                <option value="8">ABC Hardwares</option>
                            </select>
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Description </label>
                        <div class="col-sm-9">
                            <textarea id="txt-description" class="col-xs-10 col-sm-9"></textarea>
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Attachment</label>
                        <div class="col-sm-9">
                            <div class="ace-file-input col-sm-9">
                                <input id="file-attachment" type="file">
                            </div>
                        </div>
                    </div>
                    <div class="space-4"></div>
                </div>
                <!-- dialog buttons -->
                <div class="modal-footer">
                    <button id="btn-form-call-quotation" type="button" class="btn btn-primary">Call Quotation</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!--hold selected PR request Ids-->
<input id="hf-prIds" type="hidden" value="-1" />

<!--common scripts-->
<script src="~/Content/application/js/jquery.dataTables.min.js"></script>
<script src="~/Content/application/js/jquery.dataTables.bootstrap.js"></script>
<!--page related script-->
<script src="~/Scripts/erp/pr_list_proc_mgr.js"></script>
