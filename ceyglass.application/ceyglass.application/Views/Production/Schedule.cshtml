@{
    Layout = null;
}
<style type="text/css">
    .div-lbl, .div-cnt
    {
        float: left;
        margin: 5px;
    }

    .div-lbl
    {
        width: 40%;
        font-weight: bold;
    }

    .div-cnt
    {
        width: 50%;
    }
</style>

<div class="row">

    <div class="col-xs-12 col-sm-12 widget-container-span">
        <!--data table-->
        <table id="plan-list" class="table table-striped table-bordered table-hover">
        </table>
        <button id="btn-add-to-list" class="btn btn-yellow btn-block">
            <i class="icon-reply-all bigger-130"></i>&nbsp;Add to Scheduling list
        </button>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <!--selected production plans-->
            <div class="col-sm-3">
                <div class="widget-box transparent">
                    <div class="widget-header">
                        <h4>Selected Plans</h4>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div id="div-selected-plans">
                                No plans selected for schedule
                                @*<div class=">

                                </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--production lines-->
            <div class="col-sm-9">
                <div class="space"></div>

                <div class="row">
                    <!--line 1-->
                    <div class="col-sm-4 widget-box transparent" style="margin: 0 10px;">
                        <div class="widget-header widget-header-small">
                            <h4 class="blue smaller">
                                <i class="icon-fire orange"></i>
                                Line 1
                            </h4>
                        </div>
                        <div class="widget-body droppable" style="min-height: 150px;">
                        </div>
                    </div>

                    <!--line 2-->
                    <div class="col-sm-4 widget-box transparent" style="margin: 0 10px;">
                        <div class="widget-header widget-header-small">
                            <h4 class="blue smaller">
                                <i class="icon-fire orange"></i>
                                Line 2
                            </h4>
                        </div>
                        <div class="widget-body droppable" style="min-height: 150px;">
                        </div>
                    </div>

                    <!--line 3-->
                    <div class="col-sm-4 widget-box transparent" style="margin: 0 10px;">
                        <div class="widget-header widget-header-small">
                            <h4 class="blue smaller">
                                <i class="icon-fire orange"></i>
                                Line 3
                            </h4>
                        </div>
                        <div class="widget-body droppable" style="min-height: 150px;">
                        </div>
                    </div>

                    <!--line 4-->
                    <div class="col-sm-4 widget-box transparent" style="margin: 0 10px;">
                        <div class="widget-header widget-header-small">
                            <h4 class="blue smaller">
                                <i class="icon-fire orange"></i>
                                Line 4
                            </h4>
                        </div>
                        <div class="widget-body droppable" style="min-height: 150px;">
                        </div>
                    </div>

                    <!--line 5-->
                    <div class="col-sm-4 widget-box transparent" style="margin: 0 10px;">
                        <div class="widget-header widget-header-small">
                            <h4 class="blue smaller">
                                <i class="icon-fire orange"></i>
                                Line 5
                            </h4>
                        </div>
                        <div class="widget-body droppable" style="min-height: 150px;">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!--common scripts-->
<script src="~/Content/application/js/jquery.dataTables.min.js"></script>
<script src="~/Content/application/js/jquery.dataTables.bootstrap.js"></script>
