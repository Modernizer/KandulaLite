@model ceyglass.application.Models.LoginModel
<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                        <h1>
                            <span class="red">CEY</span>
                            <span class="white">GLASS</span>
                        </h1>
                        <h4 class="blue">© ceyglass</h4>
                    </div>
                    <div class="space-6"></div>
                    <div class="position-relative">
                        <div id="login-box" class="login-box visible widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header blue lighter bigger">
                                        <i class="icon-user green"></i>
                                        Please Enter Your Information
                                    </h4>
                                    <div class="space-6"></div>
                                    @using (Html.BeginForm("JsonLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                                                                
                                        <fieldset>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(m => m.UserName, new { autofocus = "autofocus", id = "loginName", @class = "form-control", type = "text", placeholder = "Username" })

                                                    <i class="icon-user"></i>
                                                </span>
                                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "help-block", style = "color:red;" })
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", type = "password", placeholder = "Password", })
                                                    <i class="icon-lock"></i>
                                                </span>
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "help-block", style = "color:red;" })
                                            </label>
                                            <div class="space"></div>
                                            <div class="clearfix">
                                                <label class="inline">
                                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "ace" })

                                                    <span class="lbl">Remember Me</span>
                                                </label>
                                                <button class="width-35 pull-right btn btn-sm btn-primary" type="submit">
                                                    <i class="icon-key"></i>
                                                    Login
                                                </button>
                                            </div>
                                            <div class="space-4"></div>
                                        </fieldset>                                       
                                                
                                        @Html.ValidationSummary("", new { style = "color:red;" })
                                       
                                    }

                                </div>
                                <div class="toolbar clearfix">
                                    <div>
                                        <a class="forgot-password-link" onclick="show_box('forgot-box'); return false;" href="javascript:void(0);">
                                            <i class="icon-arrow-left"></i>
                                            I forgot my password
                                        </a>
                                    </div>
                                    <div>
                                        &nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--mocked function-->
                        <div id="forgot-box" class="forgot-box widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header red lighter bigger">
                                        <i class="icon-key"></i>
                                        Retrieve Password
                                    </h4>
                                    <div class="space-6"></div>
                                    <p>Enter your email and to receive instructions </p>
                                    <form>
                                        <fieldset>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    <input class="form-control" type="email" placeholder="Email">
                                                    <i class="icon-envelope"></i>
                                                </span>
                                            </label>
                                            <div class="clearfix">
                                                <button class="width-35 pull-right btn btn-sm btn-danger" type="button">
                                                    <i class="icon-lightbulb"></i>
                                                    Send Me!
                                                </button>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                                <div class="toolbar center">
                                    <a class="back-to-login-link" onclick="show_box('login-box'); return false;" href="javascript:void(0);">Back to login
                                        <i class="icon-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

