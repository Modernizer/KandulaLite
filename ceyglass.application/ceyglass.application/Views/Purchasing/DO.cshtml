@{
    Layout = null;
}
<style type="text/css">
    .div-lbl, .div-cnt
    {
        float: left;
        font-weight: bold;
        margin: 5px;
    }

    .div-lbl
    {
        width: 40%;
    }

    .div-cnt
    {
        width: 50%;
    }
</style>

<!--PO model-->
<div id="model-do" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                Delivery Order
            </div>
            <!-- dialog body -->
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">DO date </label>
                        <div class="col-sm-9">
                            <input type="text" id="do-date" class="datepicker" />
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Supplier </label>
                        <div class="col-sm-9">
                            <!--supplier list will be filled dynamically-->
                            <select id="select-suppliers">
                            </select>
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">PO ID</label>
                        <div class="col-sm-9">
                            <!--po list will be filled dynamically-->
                            <select id="select-pending-po">
                            </select>
                        </div>
                    </div>
                    <div class="space-4"></div>

                </div>
                <!-- dialog buttons -->
                <div class="modal-footer">
                    <button id="btn-add-DO" type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <button id="btn-do-model" class="btn btn-warning btn-block">
        <i class="icon-plus-sign bigger-130"></i>&nbsp;Add DO
    </button>
    <table id="DO-list" class="table table-striped table-bordered table-hover">
    </table>
</div>
<!--common scripts-->
<script src="~/Content/application/js/jquery.dataTables.min.js"></script>
<script src="~/Content/application/js/jquery.dataTables.bootstrap.js"></script>
<!--page related script-->
<script src="~/Scripts/erp/DO.js"></script>
