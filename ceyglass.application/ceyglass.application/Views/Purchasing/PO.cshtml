@{
    Layout = null;
}
<style type="text/css">
    .input-qty, .input-unitp
    {
        margin-right: 5px;
    }
</style>
<!--PO model-->
<div id="model-po" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                Purchase Order
            </div>
            <!-- dialog body -->
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">PO date </label>
                        <div class="col-sm-9">
                            <input type="text" id="po-date" class="datepicker" />
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Expected delivery date </label>
                        <div class="col-sm-9">
                            <input type="text" id="deli-date" class="datepicker" />
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Supplier </label>
                        <div class="col-sm-9">
                            <!--supplier list will be filled dynamically-->
                            <select id="select-suppliers">
                            </select>
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Currency</label>
                        <div class="col-sm-9">
                            <select id="select-currency">
                                <option value="LKR">Sri Lankan Rupees
                                </option>
                                <option value="USD">USD United States Dollars
                                </option>
                                <option value="EUR">EUR Euro
                                </option>
                                <option value="CAD">CAD Canada Dollars
                                </option>
                                <option value="GBP">GBP United Kingdom Pounds
                                </option>
                                <option value="DEM">DEM Germany Deutsche Marks
                                </option>
                                <option value="FRF">FRF France Francs
                                </option>
                                <option value="JPY">JPY Japan Yen
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Items</label>
                        <div class="col-sm-9">
                            <!--item list will be filled dynamically-->
                            <select id="select-items" multiple>
                            </select>
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">&nbsp;</label>
                        <div class="col-sm-9">
                            <button id="btn-add-items" class="btn btn-info btn-xs">
                                <i class="icon-check bigger-110"></i>add selected items
                            </button>
                        </div>
                    </div>
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">PO Item(s)</label>
                        <!--Item list will be dynamically loaded-->
                        <div id="div-po-selected-item-list" class="col-sm-9">
                            <!--initial msg, will be cleared when adding content -->
                            <span class="label label-warning arrowed-in-right arrowed">select items for PO</span>
                        </div>

                    </div>
                    <div class="space-4"></div>

                </div>
                <!-- dialog buttons -->
                <div class="modal-footer">
                    <button id="btn-add-PO" type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <button id="btn-po-model" class="btn btn-warning btn-block">
        <i class="icon-plus-sign bigger-130"></i>&nbsp;Add PO
    </button>
    <table id="PO-list" class="table table-striped table-bordered table-hover">
    </table>
</div>

<!--common scripts-->
<script src="~/Content/application/js/jquery.dataTables.min.js"></script>
<script src="~/Content/application/js/jquery.dataTables.bootstrap.js"></script>
<!--page related script-->
<script src="~/Scripts/erp/PO.js"></script>
